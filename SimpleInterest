// To calculate simple interest of a set of values representing principal, no of years & rate of interest

#include <stdio.h>

int main()

{

    int principal, rate, years;

    printf("Enter the Principal Amount \n");
    scanf("%d", &principal);

    printf("Enter the Rate of Interest \n");
    scanf("%d", &rate);

    printf("For how much years the amount is taken \n");
    scanf("%d", &years);

    printf("The value of Simple Interest is %d", (principal * rate * years)/100);

    return 0;
}
